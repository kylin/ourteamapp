<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		   http://www.springframework.org/schema/context
       	   http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

		
	<bean id="com.ourteam.hr.service.IDepartmentService"
		class="com.ourteam.hr.service.DepartmentServiceImpl" scope="singleton">
		
						
		<property name="departmentDao"
			ref="com.ourteam.hr.dao.IDepartmentDAO" />
								
		<property name="employeeDepartmentRelateDao"
			ref="com.ourteam.hr.dao.IEmployeeDepartmentRelateDAO" />
								
	</bean>
		
	<bean id="com.ourteam.hr.service.IEmployeeService"
		class="com.ourteam.hr.service.EmployeeServiceImpl" scope="singleton">
		
						
		<property name="employeeDao"
			ref="com.ourteam.hr.dao.IEmployeeDAO" />
								
		<property name="employeeDepartmentRelateDao"
			ref="com.ourteam.hr.dao.IEmployeeDepartmentRelateDAO" />
								
		<property name="dentityService"
			ref="org.activiti.engine.IdentityService" />		
								
	</bean>
	
</beans>