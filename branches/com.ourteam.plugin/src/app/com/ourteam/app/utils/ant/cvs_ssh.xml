<project name="cvscommand" default="default">
	<target name="default">
		
		<deltree dir="${dest.package}"/>
		
		<echo message="Make Temp Dir"/>
		
		<mkdir dir="${dest.package}"/>
		
		<echo message="Checkout"/>
		
		<cvspass cvsroot="${cvs.root}" password="${cvs.password}" passfile="${cvs.password.file}" />
		
		<cvs cvsroot="${cvs.root}" port="${cvs.port}"  package="${cvs.package}" tag="${cvs.tag}" dest="${dest.package}" command="${cvs.command}" passfile="${cvs.password.file}" failonerror="true" />
		
		<echo message="Copy To Workspace"/>
		
		<copy todir="${workspacePath}" overwrite="true">
		    <fileset dir="${dest.package}">
		    	<include name="**/*.*"/>
		    </fileset>
		 </copy>
		
		<echo message="Delete Temp Dir"/>
		
		<deltree dir="${dest.package}"/>
		
		<echo message="Finished"/>
	</target>

</project>
